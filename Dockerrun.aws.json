{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "nginx-cert",
      "host": {
        "sourcePath": "/var/app/current/nginx/letsencrypt"
      }
    },
    {
      "name": "nginx-conf",
      "host": {
        "sourcePath": "/var/app/current/nginx/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "nginx:1",
      "hostname": "nginx",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "hostPort": 443,
          "containerPort": 443
        },
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "flask"
      ],
      "mountPoints": [
        {
          "sourceVolume": "nginx-cert",
          "containerPath": "/etc/letsencrypt",
          "readOnly": true
        },
        {
          "sourceVolume": "nginx-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        }
      ]
    },
    {
      "name": "flask",
      "image": "153768889480.dkr.ecr.ap-northeast-2.amazonaws.com/labeling_app:flask",
      "hostname": "flask",
      "essential": true,
      "memory": 2048
    }
  ]
}